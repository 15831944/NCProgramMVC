@model NCProgramMVC.Models.Tdm

@{
    ViewBag.Title = "Delete";
}
<div class="container body-content">

    <h2 class="text-center">Cancella categoria di prodotti</h2>
    <hr class="hrl" />

    <h3>Sei sicuro di voler cancellare una intera categoria di prodotti TDM?</h3>
    <div>
        <hr class="hr2" />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Prodotto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Prodotto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descrizione)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descrizione)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Cancella" class="btn btn-danger" />
                @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-success" })
            </div>
        }
    </div>
</div>