@model NCProgramMVC.Models.Slide

@{
    ViewBag.Title = "Edit";
}

<div class="container body-content">
    <h2>Modifica slide</h2>
    <hr />

    @using (Html.BeginForm("Edit", "Slides", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <input type="file" name="file" id="file" />
        <h4>
            <span class="label label-warning">
                Dimensione massima file o gruppo di file 40M
            </span>
            <a role="button" data-toggle="collapse" href="#collapse1" aria-expanded="false" aria-controls="collapse1">
                <span class="fa fa-info-circle"></span>
            </a>

        </h4>
            <div class="collapse" id="collapse1">
                <div class="well">
                    <h4>Caratteristiche file immagine slide home page</h4>
                    <dl class="dl-horizontal">
                        <dt>Estensione:</dt>
                        <dd>consigliata .jpg</dd>
                        <dt>Dimensione:</dt>
                        <dd>Max 40 Mb</dd>
                        <dt>Orientamento:</dt>
                        <dd>orizzontale</dd>
                        <dt>Proporzioni:</dt>
                        <dd>10:3 (es.1.850x557)</dd>
                    </dl>
                </div>
            </div>

        <h3 class="text-danger">@ViewBag.Message</h3><br />

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Slide_Id)
            @Html.HiddenFor(model => model.Sfondo)


            <div class="form-group">
                @Html.LabelFor(model => model.Titolo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Titolo, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Titolo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sottotitolo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Sottotitolo, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Sottotitolo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descrizione, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Posizione, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Posizione, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Posizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Pubblica, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Pubblica)
                        @Html.ValidationMessageFor(model => model.Pubblica, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="salva" class="btn btn-success" />
                    @Html.ActionLink("Torna alla lista", "Index", null, new {@class="btn btn-primary" })
                </div>
            </div>
        </div>
    }

    <div>
    </div>
</div>
