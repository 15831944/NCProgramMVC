@model NCProgramMVC.Models.GruppoProdotti

@{
    ViewBag.Title = "Edit";
}
<div class="container body-content">

    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>GruppoProdotti</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.GruppoPodotti_Id)
            @Html.HiddenFor(model => model.Prodotto)


            <div class="form-group">
                @Html.LabelFor(model => model.Prodotto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <h2>@Html.DisplayFor(model => model.Prodotto, new { htmlAttributes = new { @class = "form-control" } })</h2>
                    @Html.ValidationMessageFor(model => model.Prodotto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descrizione, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DescrizioneDett, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.DescrizioneDett, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.DescrizioneDett, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salva" class="btn btn-success" />
                    @Html.ActionLink("Annulla", "Index", "Home", new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }
</div>