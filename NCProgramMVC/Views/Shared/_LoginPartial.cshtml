@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
                <li>
                    <div class="pull-right">
                        <img class="img-logo" src="~/Content/Immagini/LogoSfumato.png" />
                    </div>
                </li>
          
                <li>
                    <div class="pull-right">
@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}
                        <a href="@Url.Action("IndexUs", "UsersAdmin")" title="Gestisci profilo" >
                            @if (File.Exists(Server.MapPath("~/Content/Immagini/FotoIscritti/" + @User.Identity.GetUserId() + ".jpg")))
                    {
                                <img class="img-usr" src="@Url.Content("~/Content/Immagini/FotoIscritti/" + @User.Identity.GetUserId() + ".jpg")" />

                            }
                            else
                            {
                                <img class="img-usr" src="@Url.Content("~/Content/Immagini/FotoIscritti/Anonimous.jpg")" />
                            }
                        </a>
                        <a href="javascript:document.getElementById('logoutForm').submit()" title="Logout" class="fa fa-sign-out fa-2x arancio"></a>

                    </div>

                </li>
        </ul>
    }
}
else
{
        <ul class="nav navbar-nav navbar-right ">
            <li>
                <div class="pull-right">

                    <img class="img-logo" src="~/Content/Immagini/LogoSfumato.png" />
                </div>
            </li>

            <li>
                <div  class="pull-right">
                    @Html.ActionLink(" ", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "fa fa-id-card-o fa-2x arancio", @Title = "Registrati" })

                    @Html.ActionLink(" ", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "fa fa-sign-in fa-2x arancio", @title = "Login" })
                </div>

            </li>
        </ul>
}
