@model NCProgramMVC.Models.Tdm

@{
    ViewBag.Title = "Details";
}
<div class="container body-content">

    <h2 class="text-center"><img class="img-prodotti-xs pull-left" src="~/Content/Immagini/tdm.png" /><a href="@Url.Action("Tdm", "Home")">@Html.DisplayFor(model => model.Prodotto) </a></h2>
    <hr class="hrl" />
    <ul class="ncbreadcrumb">
        <li><a href="@Url.Action("Tdm", "Home")">TDM System</a></li>
        <li><a href="@Url.Action("TdmProdotti", "Home", new {id = Model.Tdm_Id })">@Html.DisplayFor(model => model.Prodotto)</a></li>
    </ul>
    <hr class="hr2" />
    <table class="table table-hover">

        @foreach (var item in Model.Tdms.OrderBy(s => s.Posizione).Select((value, i) => new { i, value }))
        {
            <tr>
                <td>
                    @Html.ActionLink(@item.value.ProdottoDett, "TdmDett", "Home", new { id = item.value.TdmDett_Id }, null)
                </td>
            </tr>
        }
    </table>
    <div>
        @Html.Raw(Model.Descrizione)
    </div>
</div>
