
@{
    ViewBag.Title = "Storia";
}
<div class="container body-content">
    @foreach (var item in Model)
    {
        <h2 class="text-center">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Edit", "GruppoProdottis", new { id = @item.GruppoPodotti_Id })"><span class="fa fa-pencil "></span></a>
            }
            <img class="img-responsive img-prodotti" src="@Url.Content("~/Content/Immagini/" + item.Prodotto + ".png")" />Storia
        </h2>

        <hr class="hrl" />
        <div>@Html.Raw(@item.DescrizioneDett)</div>
    }


</div>
