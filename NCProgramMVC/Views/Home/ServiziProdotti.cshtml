@model NCProgramMVC.Models.Servizi

@{
    ViewBag.Title = "Details";
}
<div class="container body-content">

    <h2 class="text-center"><a href="@Url.Action("Servizi", "Home")">@Html.DisplayFor(model => model.Servizio) </a></h2>
    <hr class="hrl" />
    <ul class="ncbreadcrumb">
        <li><a href="@Url.Action("Servizi", "Home")">NCProgram Servizi</a></li>
        <li><a href="@Url.Action("ServiziProdotti", "Home", new {id = Model.Servizio_Id })">@Html.DisplayFor(model => model.Servizio)</a></li>
    </ul>
    <hr class="hr2" />
    <table class="table table-hover">

        @foreach (var item in Model.Servizis.OrderBy(s => s.Posizione).Select((value, i) => new { i, value }))
        {
            <tr>
                <td>
                    @Html.ActionLink(@item.value.ServizioDett, "ServiziDett", "Home", new { id = item.value.ServizoDett_Id }, null)
                </td>
            </tr>
        }
    </table>
    <div>
        @Html.Raw(Model.Descrizione)
    </div>
</div>
